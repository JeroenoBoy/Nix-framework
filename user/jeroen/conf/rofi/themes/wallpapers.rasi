@import "default.rasi"

configuration {
    modi: [dmenu];
    show-icons: true;
}

mainbox {
    children: ["inputbar", "message", "listview"];
}

listview {
    columns: 4;
    spacing: 8px;
    margin: 0px;
    padding: 64px 64px;
}

element {
    spacing: 0;
    margin: 0;
    padding: 8px 12px;
}

element-icon {
    size: 256px;
    border-radius: 100%;
}
